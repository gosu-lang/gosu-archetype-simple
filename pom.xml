<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>org.gosu-lang.archetypes</groupId>
  <artifactId>gosu-archetype-simple</artifactId>
  <version>1.13.4-SNAPSHOT</version>

  <name>Archetype - gosu-archetype-simple</name>
  <description>A "simple" project template containing only Gosu sources.</description>
  <url>http://gosu-lang.github.io/</url>

  <licenses>
    <license>
      <name>The Apache License, Version 2.0</name>
      <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
    </license>
  </licenses>

  <developers>
    <developer>
      <name>The Gosu Team</name>
      <email>gosu.lang.team@gmail.com</email>
      <organization>Guidewire</organization>
      <organizationUrl>http://gosu-lang.github.io/</organizationUrl>
    </developer>
  </developers>

  <scm>
    <connection>scm:git:git@github.com:gosu-lang/gosu-lang.git</connection>
    <developerConnection>scm:git:git@github.com:gosu-lang/gosu-lang.git</developerConnection>
    <url>git@github.com:gosu-lang/gosu-lang.git</url>
  </scm>

  <mailingLists>
    <mailingList>
      <name>gosu-lang</name>
      <archive>http://groups.google.com/group/gosu-lang</archive>
      <post>http://groups.google.com/group/gosu-lang</post>
    </mailingList>
    <mailingList>
      <name>gosu-idea</name>
      <archive>http://groups.google.com/group/gosu-idea</archive>
      <post>http://groups.google.com/group/gosu-idea</post>
    </mailingList>
  </mailingLists>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <dist.man.snapshotrepo.url>https://oss.sonatype.org/content/repositories/snapshots</dist.man.snapshotrepo.url>
  </properties>

  <repositories>
    <repository>
      <id>ossrh</id>
      <name>Central Repository (snapshots)</name>
      <url>${dist.man.snapshotrepo.url}</url>
      <releases>
        <enabled>false</enabled>
      </releases>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
    </repository>
  </repositories>

  <distributionManagement>
    <snapshotRepository>
      <id>ossrh</id>
      <url>${dist.man.snapshotrepo.url}</url>
    </snapshotRepository>
    <repository>
      <id>ossrh</id>
      <url>https://oss.sonatype.org/service/local/staging/deploy/maven2/</url>
    </repository>
  </distributionManagement>

</project>
